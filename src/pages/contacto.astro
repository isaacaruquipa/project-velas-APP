---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contacto" description="Contáctanos para cualquier consulta sobre nuestras velas artesanales">
	<Header />
	<main class="pt-32 pb-20">
		<div class="container mx-auto px-4">
			<h1 class="text-4xl md:text-5xl font-serif font-bold text-primary text-center mb-12">Contacto</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
				<!-- Información de Contacto -->
				<div>
					<h2 class="text-2xl font-serif font-bold text-primary mb-6">Encuentra tu luz interior</h2>
					<p class="text-primary/80 mb-8">
						¿Tienes alguna pregunta sobre nuestros productos o servicios? ¿Te gustaría hacer un pedido especial? 
						No dudes en contactarnos. Estamos aquí para ayudarte a encontrar la vela perfecta para cada momento.
					</p>
					
					<div class="space-y-6">
						<div>
							<h3 class="font-serif font-bold text-primary mb-2">Ubicación</h3>
							<p class="text-primary/80">La Paz, Bolivia</p>
						</div>
						
						<div>
							<h3 class="font-serif font-bold text-primary mb-2">Email</h3>
							<a href="mailto:info@velasconalma.com" class="text-accent hover:text-accent/80">
								info@velasconalma.com
							</a>
						</div>
						
						<div>
							<h3 class="font-serif font-bold text-primary mb-2">Síguenos en</h3>
							<div class="flex space-x-4">
								<a href="#" class="text-primary hover:text-accent">
									<span class="sr-only">Facebook</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
										<path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5L14.19.5C10.24.5,9.5,3.44,9.5,6.32V7.46h-3v4h3v12h5v-12h3.85l.42-4Z"/>
									</svg>
								</a>
								<a href="#" class="text-primary hover:text-accent">
									<span class="sr-only">Instagram</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.64.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.64-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.35.2-6.78,2.62-7,7C0,8.33,0,8.74,0,12S0,15.67.07,16.95c.2,4.36,2.62,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.35-.2,6.78-2.62,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.35-2.62-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/>
									</svg>
								</a>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Formulario de Contacto -->
				<div class="bg-white p-8 rounded-lg shadow-sm">
					<ContactForm />
				</div>
			</div>
		</div>
	</main>
	<Footer />
</Layout>