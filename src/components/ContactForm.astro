<form class="max-w-lg mx-auto space-y-6">
    <div>
        <label for="name" class="block text-sm font-medium text-primary mb-1">Nombre</label>
        <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 border border-primary/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent/50"
        >
    </div>

    <div>
        <label for="email" class="block text-sm font-medium text-primary mb-1">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 border border-primary/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent/50"
        >
    </div>

    <div>
        <label for="message" class="block text-sm font-medium text-primary mb-1">Mensaje</label>
        <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full px-4 py-2 border border-primary/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent/50"
        ></textarea>
    </div>

    <button
        type="submit"
        class="w-full bg-accent text-white py-3 px-6 rounded-lg hover:bg-accent/90 transition-colors"
    >
        Enviar Mensaje
    </button>
</form>